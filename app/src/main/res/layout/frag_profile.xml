<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient">

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="317dp"
        android:background="@android:drawable/editbox_background"
        android:text="TextView" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="163dp"
        android:layout_height="57dp"
        android:layout_above="@+id/textView7"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="-10dp"
        android:layout_toEndOf="@+id/userMail"
        android:background="@android:drawable/editbox_background" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="237dp"
        android:layout_height="325dp"
        android:layout_above="@+id/profileName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="58dp"
        android:src="@drawable/defaultuserprofile"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="321dp"
        android:text="Name:" />

    <TextView
        android:id="@+id/userMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="240dp"
        android:text="Mail:" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="139dp"
        android:text="Bio:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="75dp"
        android:background="@android:drawable/editbox_background"
        android:text="  Lorem ipsum dolor sit amet, cu est solum nihil, nam blandit principes aliquando cu, sumo blandit eum ea. In has enim antiopam reformidans, duo in nihil vituperata elaboraret, vidit timeam integre pro at. Sit ad modus nulla, vim no alterum feugait adolescens. Te omnium nusquam facilisi pro, no utroque feugait offendit est. In blandit inciderint usu, maiorum cotidieque ius in, ad eius dicta disputando sit.
" />
</RelativeLayout>